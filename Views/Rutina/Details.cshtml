@model FitnessManager.ViewModels.RutinaViewModel

<div class="row container py-5 text-white justify-content-center">
    <div class="col-md-8">
        <div class="container">
            <div class="card">
                <div class="card-header gradientT1">
                    <h2 class="text-light">Rutina: @Model.Rutina.Nombre</h2>
                </div>
                <div class="card-body bg-dark">
                    <div>
                        <h5 class="text-white"><b>Fecha de creación:</b> @Model.Rutina.FechaCreacion</h5>
                        <h5 class="text-white"><b>Descripción:</b></h5>
                        <p class="text-white">@Model.Rutina.Descripcion</p>
                    </div>
                    <div>
                        @if(Model.Detalles.Any())
                        {    
                            <table class="table table-striped table-dark">
                                <thead>
                                    <tr>
                                        <th>Ejercicio</th>
                                        <th>Series</th>
                                        <th>Repeticiones</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                            <tbody>    
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.Exercise.Name</td>
                                    <td>@detalle.Series</td>
                                    <td>@detalle.Repeticiones</td>
                                    <td>
                                        <a class="btn btn-detail-gradient" asp-controller="Exercise" asp-action="Details" asp-route-id="@detalle.ExerciseId"><i class="fa-solid fa-eye me-1"></i>Ver ejercicio</a>
                                    </td>
                                </tr>
                            }</tbody>
                            </table>
                        }else{
                            <div class="text-danger">No hay ejercicios asignados a esta rutina. Puede agregarlos cliqueando en el boton Editar.</div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <a class="btn btn-edit-gradient" asp-action="Edit" asp-route-id="@Model.Rutina.Id"><i class="fa-solid fa-edit me-1"></i>Editar</a>
                    <a class="btn btn-delete-gradient" asp-action="DeleteConfirmation" asp-route-id="@Model.Rutina.Id"><i class="fa-solid fa-trash me-1"></i>Eliminar</a>
                    <a class="btn btn-detail-gradient" asp-action="Index"><i class="fa-solid fa-arrow-left me-1"></i>Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>