@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
  <div class="row g-4">
    <!-- Botón ejemplo -->
    <div class="col-6 col-md-4">
      <a asp-action="Rutinas" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-list-check mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Rutinas</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a asp-action="Ejercicios" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="fa-solid fa-dumbbell mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Ejercicios</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a asp-controller="Dieta" asp-action="Index" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="fa-solid fa-list" style="font-size: 2rem;"></i>
        <span class="fw-bold">Dietas</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a asp-action="Pesajes" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="fa-solid fa-scale-balanced mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Pesajes</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a href="/Progreso" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-bar-chart-line mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Progreso</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a href="/Calendario" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-calendar mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Calendario</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a href="/Metas" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-trophy mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Metas</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a href="/Perfil" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-person-circle mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Perfil</span>
      </a>
    </div>

    <div class="col-6 col-md-4">
      <a href="/Ajustes" class="btn btn-gradient d-flex flex-column align-items-center justify-content-center shadow-lg hover-scale square-btn">
        <i class="bi bi-gear mb-2" style="font-size: 2rem;"></i>
        <span class="fw-bold">Ajustes</span>
      </a>
    </div>
  </div>
</div>

