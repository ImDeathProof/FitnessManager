@model FitnessManager.Models.Dieta

<div class="row container py-5 text-white justify-content-center">
    <div class="col-md-8">
        <div class="container">
            <form asp-action="Edit">
                <div class="card">
                    <div class="card-header gradientT1">
                        <h2 class="text-white">Editar</h2>
                    </div>
                        <div class="card-body bg-dark text-white">
                            @{
                                if (TempData["ErrorMessage"] != null) {
                                    <div class="alert alert-danger" role="alert">
                                        <p>@TempData["ErrorMessage"]</p>
                                    </div>
                                }else if (TempData["SuccessMessage"] != null) {
                                    <div class="alert alert-success" role="alert">
                                        <p>@TempData["SuccessMessage"]</p>
                                    </div>
                                }
                            }
                            <div class="form-group">
                                <label for="Nombre" class="form-label">Nombre:</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="CaloriasDiarias " class="form-label">Calorias diarias:</label>
                                <input type="text" class="form-control" id="CaloriasDiarias" name="CaloriasDiarias" value="@Model.CaloriasDiarias" required>
                                <span asp-validation-for="CaloriasDiarias" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Descripcion" class="form-label">Descripci√≥n:</label>
                                <textarea type="text" class="form-control" id="Descripcion" name="Descripcion" style="resize: none;" rows="6" required>@Model.Descripcion</textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        <div class="card-footer bg-dark">
                            <button type="submit" class="btn btn-edit-gradient"><i class="fa-solid fa-edit me-1"></i>Guardar</button>
                            <a class="btn btn-detail-gradient" asp-action="Read"><i class="fa-solid fa-arrow-left me-1"></i>Volver</a>
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>