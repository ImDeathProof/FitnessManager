@model FitnessManager.Models.Dieta

<div class="row container py-5 text-white justify-content-center">
    <div class="col-md-8">
        <div class="container">
            <div class="card">
                <div class="card-header gradientT1">
                    <h2 class="text-light">¿Estas seguro que deseas eliminar esta dieta?</h2>
                </div>
                <div class="card-body bg-dark">
                    @{
                        if (TempData["ErrorMessage"] != null) {
                            <div class="alert alert-danger" role="alert">
                                <p>@TempData["ErrorMessage"]</p>
                            </div>
                        }else if (TempData["SuccessMessage"] != null) {
                            <div class="alert alert-success" role="alert">
                                <p>@TempData["SuccessMessage"]</p>
                            </div>
                        }
                    }
                    <p class="text-white">Nombre: @Model.Nombre Kcal</p>
                    <p class="text-white">Calorias diarias: @Model.CaloriasDiarias Kcal</p>
                    <p class="text-white">Descripción: @Model.Descripcion</p>
                </div>
                <div class="card-footer bg-dark">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-delete-gradient" ><i class="fa-solid fa-trash me-1"></i>Eliminar</button>
                    </form>
                    <a class="btn btn-detail-gradient" asp-action="Read"><i class="fa-solid fa-arrow-left me-1"></i>Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>