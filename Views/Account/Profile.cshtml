@model FitnessManager.ViewModels.ProfileViewModel;

<div class="container mt-5">
    <div class="profile-card shadow-lg rounded-4 p-4 mx-auto" style="max-width: 800px; background-color: #14171A; color: #fff; border: 1px solid #2f3336;">
        <div class="cover-photo position-relative rounded-4 mb-5">
            <img src="https://images.unsplash.com/photo-1605296867304-46d5465a13f1?auto=format&fit=crop&w=900&q=80"
                class="w-100 rounded-4" style="height: 200px; object-fit: cover;">
            <div class="profile-img position-absolute" style="bottom: -50px; left: 40px;">
                <img src="@Model.AvatarUrl"
                    class="rounded-circle border border-3 border-dark" style="width: 100px; height: 100px; object-fit: cover;">
            </div>
        </div>

        <div class="ps-5 mt-3">
            <h3 class="fw-bold">@Model.Nombre @Model.Apellido</h3>
            <p class="text-muted">@("@" + Model.Username)</p>

            <div class="mt-3">
                <p><i class="bi bi-flag"></i> Objetivo: <span class="text-info">@Model.Objetivo</span></p>
            </div>

            <div class="d-flex flex-wrap gap-3 mt-4">
                <div class="stat-box p-3 rounded-4 bg-dark text-center flex-fill">
                    <h5 class="fw-bold">@Model.Edad a√±os</h5>
                    <p class="text-muted small">Edad</p>
                </div>
                <div class="stat-box p-3 rounded-4 bg-dark text-center flex-fill">
                    <h5 class="fw-bold">@Model.Peso kg</h5>
                    <p class="text-muted small">Peso</p>
                </div>
                <div class="stat-box p-3 rounded-4 bg-dark text-center flex-fill">
                    <h5 class="fw-bold">@Model.Altura cm</h5>
                    <p class="text-muted small">Altura</p>
                </div>
            </div>

            <div class="mt-4 text-end">
                <a asp-action="Settings" asp-route-view="account-settings" class="btn btn-outline-info rounded-pill px-4 fw-semibold">
                    <i class="bi bi-pencil"></i> Editar perfil
                </a>
            </div> 
        </div>
    </div>
</div>

<style>
    body {
        background-color: red;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .profile-card {
        transition: all 0.3s ease;
    }

    .profile-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0 20px rgba(0, 200, 255, 0.2);
    }

    .text-muted {
        color: #8899a6 !important;
    }

    .btn-outline-info:hover {
        background-color: #00acee;
        color: #fff;
        border-color: #00acee;
    }
</style>