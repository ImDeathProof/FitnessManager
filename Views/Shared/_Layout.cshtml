<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessManager</title>
    <script type="importmap"></script>
    <script src="https://kit.fontawesome.com/8929a508dd.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <!-- LOGO -->
                <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <i class="bi bi-activity me-2 text-info"></i> FitnessManager
                </a>

                <!-- BOTÓN MENÚ MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <!-- LINKS -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-lg-center">
                    <li class="nav-item">
                    <a class="nav-link active" href="/"><i class="bi bi-house-door me-1"></i>Inicio</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/Rutinas"><i class="bi bi-list-check me-1"></i>Rutinas</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/Dietas"><i class="bi bi-basket me-1"></i>Dietas</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/Progreso"><i class="bi bi-bar-chart-line me-1"></i>Progreso</a>
                    </li>

                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="perfilDropdown" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i> Perfil
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfilDropdown">
                        @if(User.Identity.IsAuthenticated)
                        {
                        <li><a class="dropdown-item" href="/Perfil"><i class="bi bi-person me-1"></i>Mi perfil</a></li>
                        <li><a class="dropdown-item" href="/Ajustes"><i class="bi bi-gear me-1"></i>Ajustes</a></li>
                        @if(User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" href="/Admin"><i class="bi bi-shield-lock me-1"></i>Panel Admin</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Logout"><i class="bi bi-box-arrow-right me-1"></i>Cerrar sesión</a></li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        }
                    </ul>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5 py-4 text-light">
        <div class="container text-center text-md-start">
            <div class="row align-items-center">
            <!-- Columna 1: Marca -->
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="fw-bold mb-2"><i class="bi bi-activity text-info me-1"></i> FitnessManager</h5>
                <p class="text-muted small mb-0">Tu compañero para alcanzar tus metas de entrenamiento.</p>
            </div>

            <!-- Columna 2: Links rápidos -->
            <div class="col-md-4 mb-3 mb-md-0 text-center">
                <a href="/" class="footer-link mx-2">Inicio</a>
                <a href="/Rutinas" class="footer-link mx-2">Rutinas</a>
                <a href="/Dietas" class="footer-link mx-2">Dietas</a>
                <a href="/Progreso" class="footer-link mx-2">Progreso</a>
            </div>

            <!-- Columna 3: Redes sociales -->
            <div class="col-md-4 text-center text-md-end">
                <a href="#" class="social-link mx-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social-link mx-2"><i class="bi bi-instagram"></i></a>
                <a href="#" class="social-link mx-2"><i class="bi bi-discord"></i></a>
                <a href="#" class="social-link mx-2"><i class="bi bi-youtube"></i></a>
            </div>
            </div>

            <hr class="my-3 text-secondary" />

            <!-- Derechos -->
            <div class="text-center small text-secondary">
            &copy; 2025 FitnessManager. Todos los derechos reservados.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
